# OpenHands Self-Hosted Deployment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration (Required)
# =============================================================================
# Your LLM API key (OpenAI, Anthropic, etc.)
LLM_API_KEY=your-api-key-here

# LLM Model to use (default: gpt-4o)
# Options: gpt-4o, gpt-4-turbo, claude-3-opus-20240229, claude-3-5-sonnet-20241022, etc.
LLM_MODEL=gpt-4o

# Custom LLM base URL (optional, for Azure OpenAI, local models, etc.)
LLM_BASE_URL=

# =============================================================================
# Security Configuration (Required)
# =============================================================================
# JWT Secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=openhands
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=openhands

# =============================================================================
# Port Configuration
# =============================================================================
# OpenHands application port
OPENHANDS_PORT=3000

# Nginx ports (for reverse proxy)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Workspace Configuration
# =============================================================================
# Base path for workspace files
WORKSPACE_BASE=./workspace

# =============================================================================
# Sandbox Configuration
# =============================================================================
# Runtime container image for code execution sandbox
SANDBOX_RUNTIME_CONTAINER_IMAGE=docker.openhands.dev/openhands/runtime:1.1-nikolaik

# =============================================================================
# Domain Configuration (for SSL/TLS)
# =============================================================================
# Your domain name (e.g., openhands.yourdomain.com)
DOMAIN_NAME=localhost

# =============================================================================
# Multi-Tenant Configuration (for JurisTech platform)
# =============================================================================
# Enable multi-tenant mode
MULTI_TENANT_ENABLED=false

# API endpoint for error ingestion
ERROR_INGESTION_ENDPOINT=

# GitHub App credentials (for PR management)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=
