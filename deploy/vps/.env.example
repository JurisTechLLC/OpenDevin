# OpenHands VPS Deployment Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# JWT Secret for authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your-secure-jwt-secret-here

# GitHub OAuth Configuration (from https://github.com/settings/developers)
GITHUB_APP_CLIENT_ID=your-github-client-id
GITHUB_APP_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Sandbox Configuration
# The Docker image used for code execution sandboxes
SANDBOX_RUNTIME_CONTAINER_IMAGE=docker.openhands.dev/openhands/runtime:1.1-nikolaik

# Sandbox user ID (0 = root, recommended for simplicity)
SANDBOX_USER_ID=0

# Workspace directory on the host
WORKSPACE_BASE=/opt/openhands/workspace

# Application Mode
# - saas: Requires authentication (GitHub OAuth)
# - oss: No authentication required
APP_MODE=saas

# =============================================================================
# LLM CONFIGURATION (Optional - users can configure in UI)
# =============================================================================

# Default LLM API Key (users can override in the UI)
LLM_API_KEY=

# Default LLM Model
LLM_MODEL=gpt-4o

# Custom LLM Base URL (for self-hosted models or proxies)
LLM_BASE_URL=

# =============================================================================
# SSL CONFIGURATION (for production)
# =============================================================================

# Your domain name (used for SSL certificate)
DOMAIN=openhands.yourdomain.com

# Email for Let's Encrypt notifications
LETSENCRYPT_EMAIL=admin@yourdomain.com
